{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.rulers": [
        80
    ],
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "javascript.validate.enable": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true
    },
    "cursor.rulesForAI": {
        "language": "ja",
        "style": "casual",
        "responseFormat": "concise",
        "codeStyle": "prettier",
        "expertMode": true,
        "immediateAnswer": true,
        "detailedExplanation": "after",
        "suggestAlternative": true,
        "focusOnCode": true,
        "respectProjectStyle": true,
        "splitLongResponses": true,
        "showSourceLinks": "end",
        "skipAIDisclosure": true,
        "skipKnowledgeCutoff": true
    }
}
